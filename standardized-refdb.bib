@Article{P-JACS-2016-v138-Li,
  author    = {Li, Lei and Kumar, Manoj and Zhu, Chongqin and Zhong, Jie and Francisco, Joseph S and Zeng, Xiao Cheng},
  title     = {Near-barrierless ammonium bisulfate formation via a loop-structure promoted proton-transfer mechanism on the surface of water},
  journal   = {J. Am. Chem. Soc.},
