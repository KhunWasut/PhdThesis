@Article{P-JPhysChemC-2015-v119-Zarzycki,
  author    = {Zarzycki, Piotr and Kerisit, Sebastien and Rosso, Kevin M},
  title     = {Molecular dynamics study of Fe (II) adsorption, electron exchange, and mobility at goethite ($\alpha$-FeOOH) surfaces},
