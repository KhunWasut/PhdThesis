@Article{P-JPhysChemC-2016-v120-Perara,
  author    = {Perera, Ganganath S and Yang, Gang and Nettles, Charles B and Perez, Felio and Hollis, T Keith and Zhang, Dongmao},
  title     = {Counterion Effects on Electrolyte Interactions with Gold Nanoparticles},
