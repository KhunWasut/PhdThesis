@Article{P-JChemPhys-2013-v139-Hashemian,
  author   = {Behrooz Hashemian and Daniel Millán and Marino Arroyo},
  title    = {Modeling and enhanced sampling of molecular systems with smooth and nonlinear data-driven collective variables},
  journal  = {J. Chem. Phys.},
