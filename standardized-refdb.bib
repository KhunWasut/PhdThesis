@Article{P-JChemPhys-1991-v94-Natanson,
  author   = {Gregory A. Natanson and Bruce C. Garrett and Thanh N. Truong and Tomi Joseph and Donald G. Truhlar},
  title    = {The definition of reaction coordinates for reaction‐path dynamics},
