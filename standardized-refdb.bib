}

@Article{P-ChemMater-2015-v27-Canepa,
  author    = {Canepa, Pieremanuele and Gautam, Gopalakrishnan Sai and Malik, Rahul and Jayaraman, Saivenkataraman and Rong, Ziqin and Zavadil, Kevin R and Persson, Kristin and Ceder, Gerbrand},
