@Article{P-JPhysChemLett-2016-v7-Nattino,
  author    = {Nattino, Francesco and Migliorini, Davide and Kroes, Geert-Jan and Dombrowski, Eric and High, Eric A and Killelea, Daniel R and Utz, Arthur L},
  title     = {Chemically accurate simulation of a polyatomic molecule-metal surface reaction},
  journal   = {J. Phys. Chem. Lett.},
